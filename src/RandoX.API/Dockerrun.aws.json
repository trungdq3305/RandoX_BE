- name: Generate deployment package
  run: |
    IMAGE_TAG=${{ github.sha }}
    mkdir -p deploy
    cat > deploy/Dockerrun.aws.json <<EOF
    {
      "AWSEBDockerrunVersion": "1",
      "Image": {
        "Name": "trungdq3305/randox:latest"
      },
      "Ports": [
        {
          "ContainerPort": "5000"
        }
      ]
    }
    EOF
    cd deploy && zip -r ../deploy.zip .
